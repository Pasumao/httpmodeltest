                                            valueHelpRequest="onMultiInputValueHelpRequest"
                                            data:valuehelp='{
                                                key: "Name",
                                                title: "Name",
                                                supportRanges: false,
                                                select_one: false,
                                                table: {
                                                    modelName: "valuehelp",
                                                    modelPath: "/SCDA",
                                                    columns: [ 
                                                        {text: "Id",key: "Id"},
                                                        {text: "Name",key: "Name"},
                                                        {text: "Description",key: "Description"},
                                                        {text: "Version",key: "Version"}
                                                    ]
                                                }
                                            }'>
                                        </MultiInput>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem
                                    name="Discription"
                                    label="Discription"
                                    groupName="Group1"
                                    visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiInput 
                                            showValueHelp="true" 
                                            valueHelpRequest="onMultiInputValueHelpRequest"
                                            data:valuehelp='{
                                                key: "Discription",
                                                title: "Discription",
                                                supportRanges: false,
                                                select_one: false,
                                                table: {
                                                    modelName: "valuehelp",
                                                    modelPath: "/SCDA",
                                                    columns: [ 
                                                        {text: "Id",key: "Id"},
                                                        {text: "Name",key: "Name"},
                                                        {text: "Description",key: "Description"},
                                                        {text: "Version",key: "Version"}
                                                    ]
                                                }
                                            }'>
                                        </MultiInput>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem
                                    name="ResourceName"
                                    label="Resource Name"
                                    groupName="Group1"
                                    data:key="Name"
                                    visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiInput 
                                            showValueHelp="true" 
                                            valueHelpRequest="onMultiInputValueHelpRequest"
