<mvc:View xmlns:codeeditor="sap.ui.codeeditor" xmlns:uxap="sap.uxap" 
    controllerName="com.aspn.tools.ybcpi0040.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f" 
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m">
    <f:FlexibleColumnLayout
        id="idFlexibleColumnLayout"
        layout="{fcl>/layout}"
        >
        <f:beginColumnPages>
            <f:DynamicPage >
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <Title text="Script Collection"></Title>
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>
                <f:header>
                    <f:DynamicPageHeader>
                        <fb:FilterBar 
                            id="idFilterBar"
                            showClearOnFB="true"
                            clear="onFilterBarClear"
                            search="onFilterBarSearch">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem
                                    name="Search"
                                    label="Search" 
                                    groupName="Group1"
                                    visibleInFilterBar="true">
                                    <fb:control>
                                        <SearchField placeholder="Search" liveChange="onSearchFieldLiveChange"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <fb:FilterGroupItem
                                    name="Id"
                                    label="Package"
                                    groupName="Group1"
                                    visibleInFilterBar="true">
                                    <fb:control>
                                        <MultiInput 
                                            id="idMultiInput"
                                            showValueHelp="true" 
                                            valueHelpRequest="onMultiInputValueHelpRequest"
                                            data:valuehelp='{
                                                key: "Id",
                                                title: "Package",
                                                supportRanges: true,
                                                select_one: false,
                                                table: {
                                                    modelName: "CPI",
                                                    modelPath: "/IntegrationPackages", 
                                                    columns: [ 
                                                        {text: "Package",key: "Id"},
                                                        {text: "Package Name",key: "Name"}
                                                    ]
                                                }
                                            }'>
                                        </MultiInput>
                                    </fb:control>
                                </fb:FilterGroupItem>
                                <!-- <fb:FilterGroupItem
                                    name="Name"
                                    label="Name"
                                    groupName="Group1"
                                    visibleInFilterBar="true">
                                    <fb:control>
